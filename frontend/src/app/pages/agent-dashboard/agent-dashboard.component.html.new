<div class="agent-dashboard">
  <!-- Header -->
  <header class="dashboard-header">
    <div class="dashboard-header-content">
      <div class="header-info">
        <h1 class="header-title">Welcome Back, {{ agentName }}!</h1>
        <p class="header-subtitle">{{ agencyName }} - Agent Portal</p>
      </div>
      <button (click)="logout()" class="btn btn-danger">
        Logout
      </button>
    </div>
  </header>

  <!-- Stats Cards -->
  <div class="dashboard-container">
    <div class="stats-grid">
      <div class="stat-card">
        <h3 class="stat-label">New Leads</h3>
        <p class="stat-number">{{ newLeadsCount }}</p>
      </div>
      <div class="stat-card">
        <h3 class="stat-label">Follow-Ups</h3>
        <p class="stat-number">{{ followUpsCount }}</p>
      </div>
      <div class="stat-card">
        <h3 class="stat-label">Appointments</h3>
        <p class="stat-number">{{ appointmentsCount }}</p>
      </div>
      <div class="stat-card">
        <h3 class="stat-label">Closed Deals</h3>
        <p class="stat-number">{{ closedDealsCount }}</p>
      </div>
    </div>

    <!-- Filters -->
    <div class="filter-section">
      <label class="filter-label">Filter by Status:</label>
      <select [(ngModel)]="statusFilter" (change)="onStatusFilterChange()" class="filter-select">
        <option value="all">All Leads</option>
        <option value="New">New</option>
        <option value="Contacted">Follow-Up</option>
        <option value="Scheduled">Appointment</option>
        <option value="Closed">Closed Deals</option>
      </select>
    </div>

    <!-- Leads Table -->
    <div class="table-section">
      <table class="leads-table">
        <thead class="table-header">
          <tr>
            <th>Lead Name</th>
            <th>Property Address</th>
            <th>Score</th>
            <th>Status</th>
            <th>Callback Time</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody class="table-body">
          <tr *ngFor="let lead of filteredLeads" class="table-row">
            <td class="cell-name">{{ lead.homeownerName }}</td>
            <td class="cell-address">{{ lead.propertyAddress }}</td>
            <td class="cell-score">
              <span class="score-badge">★★★★☆</span>
            </td>
            <td class="cell-status">
              <span [class]="'status-badge status-' + (lead.status?.toLowerCase() || 'new')">
                {{ lead.status }}
              </span>
            </td>
            <td class="cell-time">{{ lead.preferredContactTime || 'Anytime' }}</td>
            <td class="cell-actions">
              <button (click)="selectLead(lead)" class="btn-small btn-action">Actions</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Lead Details Modal -->
    <div *ngIf="selectedLead" class="modal-overlay" (click)="closeModal()">
      <div class="modal-content" (click)="$event.stopPropagation()">
        <div class="modal-header">
          <h2 class="modal-title">{{ selectedLead.homeownerName }} - {{ selectedLead.propertyAddress }}</h2>
          <button (click)="closeModal()" class="close-btn">&times;</button>
        </div>

        <div class="modal-body">
          <div class="detail-section">
            <h3 class="section-title">Contact Information</h3>
            <div class="detail-grid">
              <div class="detail-item">
                <span class="detail-label">Email:</span>
                <span class="detail-value">{{ selectedLead.homeownerEmail }}</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Phone:</span>
                <span class="detail-value">{{ selectedLead.homeownerPhone }}</span>
              </div>
            </div>
          </div>

          <div class="detail-section">
            <h3 class="section-title">Property Details</h3>
            <div class="detail-grid">
              <div class="detail-item">
                <span class="detail-label">Type:</span>
                <span class="detail-value">{{ selectedLead.propertyType }}</span>
              </div>
              <div class="detail-item">
                <span class="detail-label">Est. Value:</span>
                <span class="detail-value">{{ selectedLead.estimatedValue | currency }}</span>
              </div>
            </div>
          </div>

          <!-- Status Update -->
          <div class="detail-section">
            <h3 class="section-title">Update Status</h3>
            <select [(ngModel)]="newStatus" class="form-input">
              <option value="">Select Status</option>
              <option value="New">New</option>
              <option value="Contacted">Contacted</option>
              <option value="Scheduled">Scheduled</option>
              <option value="Closed">Closed</option>
            </select>
          </div>

          <!-- Add Note -->
          <div class="detail-section">
            <h3 class="section-title">Add Note</h3>
            <textarea [(ngModel)]="noteText" placeholder="Add a note..." class="form-input textarea" rows="3"></textarea>
            <button (click)="addNoteToLead()" class="btn btn-secondary">Add Note</button>
          </div>

          <!-- Schedule Follow-Up -->
          <div class="detail-section">
            <h3 class="section-title">Schedule Follow-Up</h3>
            <input type="datetime-local" [(ngModel)]="followUpDate" class="form-input" />
            <textarea [(ngModel)]="followUpNotes" placeholder="Follow-up notes..." class="form-input textarea" rows="3"></textarea>
            <button (click)="scheduleFollowUp()" class="btn btn-secondary">Schedule Follow-Up</button>
          </div>

          <!-- Call History -->
          <div class="detail-section" *ngIf="selectedLead.callHistory && selectedLead.callHistory.length">
            <h3 class="section-title">Call History</h3>
            <ul class="history-list">
              <li *ngFor="let call of selectedLead.callHistory" class="history-item">{{ call }}</li>
            </ul>
          </div>
        </div>

        <div class="modal-footer">
          <button (click)="closeModal()" class="btn btn-outline">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
